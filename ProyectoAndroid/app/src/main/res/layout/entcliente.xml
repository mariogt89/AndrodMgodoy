<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    >

    <RelativeLayout
        android:id="@+id/Relamostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:onClick="IngresoLogin"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignBottom="@+id/txttelefono"
            android:layout_toLeftOf="@+id/txtcliente"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/txtcliente"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Nombre Cliente"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:textIsSelectable="false"
            android:textSize="10dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtdireccion"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtcliente"
            android:layout_alignStart="@+id/txtcliente"
            android:layout_below="@+id/txtcliente"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:hint="Direccion"
            android:padding="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/txttelefono"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtdireccion"
            android:layout_alignStart="@+id/txtdireccion"
            android:layout_below="@+id/txtdireccion"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:hint="Telefono"
            android:padding="10dp"
            android:paddingBottom="10dp" />

    </RelativeLayout>

</RelativeLayout>





